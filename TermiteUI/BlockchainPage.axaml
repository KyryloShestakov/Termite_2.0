<Control xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:termiteUi="clr-namespace:TermiteUI"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="TermiteUI.BlockchainPage"
        x:DataType="termiteUi:BlockchainViewModel"
        >
    <Grid>
        <TextBlock Text="Blockchain" FontSize="18" Margin="10" />
        <ListBox ItemsSource="{Binding Blocks}" Width="1500" Height="500" 
                 Background="Transparent"
                 HorizontalAlignment="Left">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Index: " FontWeight="Bold" />
                        <TextBlock Text="{Binding Index}" Margin="5,0" />
                        <TextBlock Text="Date: " FontWeight="Bold" />
                        <TextBlock Text="{Binding Timestamp}" Margin="5,0" /> 
                        <TextBlock Text="PreviousHash: " FontWeight="Bold" />
                        <TextBlock Text="{Binding PreviousHash}" Margin="5,0" /> 
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        
        
    </Grid>
</Control>
