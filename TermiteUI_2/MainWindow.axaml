<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:termiteUi2="clr-namespace:TermiteUI_2"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="TermiteUI_2.MainWindow"
        Background="#1A1D2B"
        Width="800" Height="500"
        x:DataType="termiteUi2:MainWindow"
        Title="Node Dashboard">
    <Window.Resources>
        <termiteUi2:BoolToButtonTextConverter x:Key="BoolToButtonTextConverter"/>
    </Window.Resources>
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Width="600">
            <!-- Title Section -->
            <Image Source="avares://TermiteUI_2/Images/logo.png" Width="306" Height="106" Margin="5,0,0,0"/>

            <!-- Node Info Section -->
            <Border Background="#23263A" CornerRadius="10" Padding="10" Margin="10">
                <StackPanel>
                    <TextBlock Text="ID of the Last Block:" Foreground="White" FontSize="16"/>
                    <TextBlock Text="{Binding IdOfLastBlock}" Foreground="#23A9BD" FontSize="16" Margin="0,5"/>
                    <TextBlock Text="Total Number of Blocks:" Foreground="White" FontSize="16"/>
                    <TextBlock Text="{Binding CountOfBlocks}" Foreground="Gray" FontSize="14" Margin="0,5"/>

                    <Grid Margin="0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Orientation="Horizontal">
                            <TextBlock>
                                <Run Text="Balance: " Foreground="White"/>
                                <Run Text="{Binding Balance}" Foreground="#23A9BD"/>
                            </TextBlock>
                            <Image Source="avares://TermiteUI_2/minilogo.png" Width="16" Height="16" Margin="5,0,0,0"/>
                            <TextBlock Text="TER " Foreground="#23A9BD" FontSize="14"/>
                        </StackPanel>
                    </Grid>
                    <Button
                            Content="{Binding IsNodeRunning, Converter={StaticResource BoolToButtonTextConverter}}"
                            Command="{Binding StartNodeCommand}"

                            Background="#FFA500" 
                            Foreground="White" 
                            Padding="10,5" 
                            HorizontalAlignment="Center" 
                            Margin="0,10"/>
                </StackPanel>
            </Border>
            
            <!-- Edge Compute Section -->
            <Border Background="#23263A" CornerRadius="10" Padding="10" Margin="10">
                <StackPanel>
                    <TextBlock Text="Edge Compute" Foreground="#00D4FF" FontSize="16"/>
                    <TextBlock Text="Compute tasks will start as soon as they are assigned." Foreground="Gray" FontSize="14" Margin="0,5"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
