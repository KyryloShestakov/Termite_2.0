<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="TermiteUI_2._0.MainWindow"
        Background="#1A1D2B"
        Width="800" Height="500">
   <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Width="600">
            <TextBlock Text="Termite Node" FontSize="24" Foreground="Snow" HorizontalAlignment="Center"/>
            
            <Border Background="#23263A" CornerRadius="10" Padding="10" Margin="10">
                <StackPanel>
                    <TextBlock Text="0x56BF...C7cf" Foreground="White" FontSize="16"/>
                    <TextBlock Text="Block: 28,533,944   Peers: 13" Foreground="Gray" FontSize="14"/>
                    <Button Content="Open node wallet" Background="Transparent" Foreground="#00D4FF" BorderThickness="0"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="TER" Foreground="White" FontSize="14"/>
                            <TextBlock Text="Balance: 0" Foreground="Gray"/>
                            <TextBlock Text="Pending: 0" Foreground="Gray"/>
                        </StackPanel>
                    </Grid>
                    
                    <TextBlock Text="* Payments (if the minimum is met) are sent in the first week of the month." FontSize="12" Foreground="Gray"/>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                        <TextBlock Text="Steaked TER:" Foreground="White" FontSize="14"/>
                        <TextBlock Text="0" Foreground="#FFA500" FontSize="14"/>
                    </StackPanel>
                    
                    <Button Content="Stake TER" Background="#FFA500" Foreground="White" Padding="10,5" HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
            
            <Border Background="#23263A" CornerRadius="10" Padding="10" Margin="10">
                <StackPanel>
                    <TextBlock Text="Edge Compute" Foreground="#00D4FF" FontSize="16"/>
                    <TextBlock Text="Compute tasks will start as soon as they are assigned." Foreground="Gray" FontSize="14"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
